<UserControl
    x:Class="Views.AddItemView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
  <DockPanel>
    <Button DockPanel.Dock="Bottom" Command="{Binding Cancel}" Content="Cancel"/>
    <Button DockPanel.Dock="Bottom" Command="{Binding Ok}" Content="Ok"/>
    <TextBox AcceptsReturn="False"
             Text="{Binding Description}"
             Watermark="Enter you ToDo"/>
  </DockPanel>
</UserControl>
